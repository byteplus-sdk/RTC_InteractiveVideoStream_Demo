<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/video_group_top_sep_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCE0E0E0"
        app:layout_constraintTop_toTopOf="parent" />

    <com.volcengine.vertcdemo.videochat.feature.roommain.VideoChatSeatLayout
        android:id="@+id/video_group_seat_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/video_group_seat_2"
        app:layout_constraintTop_toBottomOf="@+id/video_group_top_sep_line" />

    <com.volcengine.vertcdemo.videochat.feature.roommain.VideoChatSeatLayout
        android:id="@+id/video_group_seat_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@+id/video_group_seat_1"
        app:layout_constraintRight_toLeftOf="@+id/video_group_seat_3"
        app:layout_constraintTop_toBottomOf="@+id/video_group_top_sep_line" />

    <com.volcengine.vertcdemo.videochat.feature.roommain.VideoChatSeatLayout
        android:id="@+id/video_group_seat_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@+id/video_group_seat_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_group_top_sep_line" />

    <View
        android:id="@+id/video_group_middle_sep_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCE0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/video_group_seat_1" />

    <com.volcengine.vertcdemo.videochat.feature.roommain.VideoChatSeatLayout
        android:id="@+id/video_group_seat_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/video_group_seat_5"
        app:layout_constraintTop_toBottomOf="@+id/video_group_middle_sep_line" />

    <com.volcengine.vertcdemo.videochat.feature.roommain.VideoChatSeatLayout
        android:id="@+id/video_group_seat_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@+id/video_group_seat_4"
        app:layout_constraintRight_toLeftOf="@+id/video_group_seat_6"
        app:layout_constraintTop_toBottomOf="@+id/video_group_middle_sep_line" />

    <com.volcengine.vertcdemo.videochat.feature.roommain.VideoChatSeatLayout
        android:id="@+id/video_group_seat_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toRightOf="@+id/video_group_seat_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_group_middle_sep_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCE0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/video_group_seat_6" />
</androidx.constraintlayout.widget.ConstraintLayout>