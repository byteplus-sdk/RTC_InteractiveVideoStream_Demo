<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_chat_main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/video_chat_background_0">

    <FrameLayout
        android:id="@+id/local_anchor_name_fl"
        android:layout_width="0dp"
        android:layout_height="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/local_name_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/video_chat_name_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="23.51sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="å…‰" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/local_live_fl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <FrameLayout
        android:id="@+id/video_chat_main_title"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/video_chat_room_info_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/video_chat_main_title_prefix"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/video_chat_room_list_icon_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17.6sp"
            android:textStyle="bold"
            tools:text="U" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_chat_main_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E5FFFFFF"
                android:textSize="12sp"
                tools:text="user name" />

            <TextView
                android:id="@+id/video_chat_main_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99FFFFFF"
                android:maxLines="1"
                android:textSize="8sp"
                tools:text="ID:123433434" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/leave_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/video_close_unselected"/>

    <FrameLayout
        android:layout_width="54dp"
        android:layout_height="28dp"
        android:layout_marginTop="42dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/video_chat_room_main_audience_bg"
        app:layout_constraintRight_toLeftOf="@+id/leave_iv"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14.67dp"
                android:layout_height="12.57dp"
                android:src="@drawable/ic_audience" />

            <TextView
                android:id="@+id/video_chat_main_audience_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="123" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_disconnect_tip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="#394254"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:src="@drawable/close_red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="48dp"
            android:gravity="center_vertical"
            android:textColor="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/biz_fl"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/video_chat_main_title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/video_chat_main_chat_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/video_chat_main_bottom_option"
        app:layout_constraintTop_toBottomOf="@+id/biz_fl"
        tools:listitem="@layout/item_video_chat_chat" />

    <com.volcengine.vertcdemo.videochat.feature.roommain.VideoChatBottomOptionLayout
        android:id="@+id/video_chat_main_bottom_option"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>